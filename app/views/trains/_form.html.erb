<%= form_for(@train) do |f| %>

  <%= render 'common/errors', resource: @train %>

    <div class="field">
      <%= f.label :number %><br>
      <%= f.number_field :number %>
    </div>
   
    <div class="field">
      <%= f.label :current_station, "Текущая станция" %>  
      <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title %>
    </div>
  
    <div class="field">
      <%= f.label :is_head, "C головы" %>
      <%= f.check_box :is_head %>
    </div> 

    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>
