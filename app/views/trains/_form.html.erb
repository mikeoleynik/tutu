<%= form_for(@train) do |f| %>

  <%= render 'common/errors', resource: @train %>

    <div class="field">
      <%= f.label :number %><br>
      <%= f.number_field :number %>
    </div>
  
    <div class="field">
    	<%= f.label :route, "Назначить маршрут" %>
  	  <%= f.collection_select :route, Route.all, :id, :title %>
    </div>

    <div class="field">
      <%= f.label :is_head, "C головы" %>
      <%= f.check_box :is_head %>
    </div> 

    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>
