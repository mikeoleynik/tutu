<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>Маршрут поезда:</strong>
  <% if @train.route.present? %>
  	<%= @train.route.title %>
  <% else %>
 	  Маршрут не назначен
  <% end %>
</p>

<p>
  <%= link_to "Добавить вагон", new_train_carriage_path(@train) %>
</p>

<p>
  <strong>Вагоны</strong>

  <ul>
    <% @train.carriages.each do |car| %>
      <% if @train.is_head == true %>
        <% @train.carriages.order(:number) %>
      <% else %>
        <% @train.carriages.order(number: :desc) %>
      <% end %>

      <li><%= link_to "Вагон №#{car.number}", car %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %> |
<%= link_to 'Home', welcome_index_path %>
