<%= form_for(@route) do |f| %>

<%= render 'common/errors', resource: @route %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <div class="field">
  	<%= f.label :train, "Поезд" %>
    <%= f.collection_select :train_ids, Train.all, :id, :number %>
  </div>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>