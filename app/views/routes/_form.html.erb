<%= form_for(@route) do |f| %>

  <%= render 'common/errors', resource: @route %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
  	<%= f.label :train, "Поезд" %>
    <%= f.collection_select :train_ids, Train.all, :id, :number %>
  </div>
   
  <div class="field">
    <%= f.submit %>
  </div>
<% end %>