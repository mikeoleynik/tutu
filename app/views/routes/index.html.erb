<h1>Listing Route</h1>

<table>
  <tr>
    <th>Title</th>
  </tr>
 
  <% @route.each do |route| %>
    <tr>
      <td><%= route.title %></td>
      <td><%= link_to 'Show', route_path(route) %></td>
      <td><%= link_to 'Edit', edit_route_path(route) %></td>
      <td><%= link_to 'Destroy', route_path(route),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New route', new_route_path %> |
