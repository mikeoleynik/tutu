<h1>Новый вагон</h1>

<%= form_for train_carriages_path do |f| %>
    <div class="field">
      <%= f.label :number %><br>
      <%= f.text_field :number %>
    </div>

    <div class="field">
      <%= f.label :up_places %><br>
      <%= f.number_field :up_places %>
    </div>

    <div class="field">
      <%= f.label :lower_places %><br>
      <%= f.number_field :lower_places %>
    </div>

    <div class="field">
      <%= f.label :lower_places %><br>
      <%= f.number_field :lower_places %>
    </div>

    <div class="actions">
      <%= f.submit "Создать" %>
    </div>
<% end %>