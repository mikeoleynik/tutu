<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="col-md-3">

    <h2><%= t('.title') %></h2>

    <div class="field">
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "Имя" %>
    </div>

    <div class="field">
      <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Фамилия" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>   
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Пароль (минимум #{@minimum_password_length} символов)" %>
      <% end %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder:"Повторите пароль" %>
    </div>

    <div class="actions">
      <%= f.submit "Регистрация", class: "btn btn-default" %>
    </div>

    <%= render "devise/shared/links" %>
  </div>
<% end %>


