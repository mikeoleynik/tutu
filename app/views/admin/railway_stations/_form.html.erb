<%= form_for([:admin, @railway_station]) do |f| %>

  <%= render 'common/errors', resource: @railway_station %>

  <div class="field">
    <%= f.text_field :title, class: "form-control", placeholder: "Название станции"  %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit', action: @railway_station.new_record? ? 'Создать' : 'Изменить'), class: "btn btn-default"%>
  </div>
  
<% end %>
