<%= form_for [:admin, @train, @carriage] do |f| %>

  <div class="field">
    <%= f.number_field :up_places, class: "form-control", placeholder: "Верхние места" %>
  </div>

  <div class="field">
    <%= f.number_field :lower_places, class: "form-control", placeholder: "Нижние места" %>
  </div>

  <div class="field">
    <%= f.number_field :side_up_places, class: "form-control", placeholder: "Боковые верхние места" %>
  </div>

  <div class="field">
    <%= f.number_field :side_lower_places, class: "form-control", placeholder: "Боковые нижние места" %>
  </div>

  <div class="field">
    <%= f.text_field :type_car, class: "form-control", placeholder: "Тип вагона" %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit'), class: "btn btn-default" %>
  </div>

<% end %>
