<% hidden = false unless local_assigns[:hidden] %>

<%= form_for [:admin, route], html: { style: "display: #{hidden ? 'none' : 'block'}" } do |f| %>

  <%= render 'common/errors', resource: route %>

  <div class="field">
    <%= f.text_field :title, class: "form-control", placeholder: "Название маршрута" %>
  </div>

  <div class="field">
    <%= f.label :railway_station_ids %>
    <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, { multiple: true } %>
  </div>
 
  <div class="field">
    <%= f.submit t('.submit', action: route.new_record? ? 'Создать' : 'Изменить'), class: "btn btn-default"%>
  </div>
<% end %>