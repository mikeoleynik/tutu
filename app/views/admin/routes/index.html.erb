<h1>Список маршрутов</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Название</th>
    </tr>
  </thead>
 
  <tbody>
    <% @route.each do |route| %>
      <tr>
        <td><%= route.title %></td>
        <td><%= link_to 'Показать', [:admin, route] %></td>
        <td><%= link_to 'Редактировать', edit_admin_route_path(route) %></td>
        <td><%= link_to 'Удалить', [:admin, route],
                method: :delete,
                data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Создать', new_admin_route_path %>
