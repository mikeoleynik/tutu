<% hidden = false unless local_assigns[:hidden] %>

<%= form_for [:admin, train], html: { style: "display: #{hidden ? 'none' : 'block'}" } do |f| %>

  <%= render 'common/errors', resource: train %>

  <div class="field">
    <%= f.number_field :number, class: "form-control", placeholder: "Номер поезда" %>
  </div>
   
  <div class="field">
    <%= f.label :current_station %>  
    <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= f.label :route %>
    <%= f.collection_select :route_id, Route.all, :id, :title %>
  </div>
  
  <div class="field">
    <%= f.label :is_head %>
    <%= f.check_box :is_head %>
  </div> 

  <div class="actions">
    <%= f.submit t('.submit', action: train.new_record? ? 'Создать' : 'Изменить'), class: "btn btn-default"%>
  </div>

<% end %>
